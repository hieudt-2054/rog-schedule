{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential",
        "standard"
    ],
    "globals": {
        "trans": true,
        "axios": true,
        "moment": true,
        "_": true,
        "Vue": true,
        "$": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            2,
            "single"
        ],
        "no-console": 1,
        "no-debugger": 1,
        "comma-dangle": [
            2,
            "always-multiline",
            {
                "functions": "never"
            }
        ],
        "curly": [
            2,
            "all"
        ],
        "eqeqeq": [
            2,
            "smart"
        ],
        "semi": [
            "error"
            // "always"
        ]
    }
}